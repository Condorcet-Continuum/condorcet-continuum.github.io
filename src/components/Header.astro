---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';

import logoImg from '../assets/logo-continuum.svg';
---

<header
  class="sticky top-0 z-50 w-full bg-white/90 backdrop-blur-md border-b border-gray-100 shadow-sm"
>
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="shrink-0">
        <a href="/" class="group flex items-center gap-3">
          <img
            src={logoImg.src}
            alt="Logo Condorcet Continuum"
            class="h-10 w-10 group-hover:scale-110 transition-transform duration-200"
            width={logoImg.width}
            height={logoImg.height}
          />
          <div class="flex flex-col leading-none transition-opacity group-hover:opacity-80">
            <span class="text-lg font-extrabold tracking-tight text-blue-700">Condorcet</span>
            <span class="text-lg font-extrabold tracking-tight text-rust">Continuum</span>
          </div>
        </a>
      </div>

      <div class="hidden md:flex items-center space-x-8">
        <div class="flex gap-6 text-sm font-medium text-slate-600">
          <HeaderLink href="/">Accueil</HeaderLink>
          <HeaderLink href="/vision">Vision</HeaderLink>
          <HeaderLink href="/use-cases">Cas d'Usage</HeaderLink>
          <HeaderLink href="/cognition">Cognition</HeaderLink>
          <HeaderLink href="/architecture">Architecture</HeaderLink>
          <HeaderLink href="/raise">R.A.I.S.E.</HeaderLink>
          <HeaderLink href="/value">Valeur</HeaderLink>
          <HeaderLink href="/roadmap">Roadmap</HeaderLink>
        </div>
      </div>

      <div class="hidden md:flex items-center">
        <a
          href="https://github.com/Condorcet-Continuum/raise"
          target="_blank"
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-slate-900 hover:bg-rust transition-colors shadow-sm"
        >
          <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path
              fill-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              clip-rule="evenodd"></path>
          </svg>
          GitHub
        </a>
      </div>
    </div>
  </nav>
</header>
