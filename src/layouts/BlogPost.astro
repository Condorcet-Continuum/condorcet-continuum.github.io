---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets'; // Import indispensable pour les images locales

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="fr">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="bg-slate-50 text-slate-900 font-sans antialiased">
    <Header />

    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <article class="bg-white rounded-3xl shadow-sm border border-slate-200 overflow-hidden">
        <div
          class="w-full bg-slate-100 flex justify-center items-center py-12 border-b border-slate-100"
        >
          {
            heroImage && (
              // On utilise <Image /> au lieu de <img> pour gérer l'objet importé
              <div class="w-48 h-48 md:w-64 md:h-64">
                <Image src={heroImage} alt={title} class="w-full h-full object-contain" />
              </div>
            )
          }
        </div>

        <div class="p-8 md:p-12 prose prose-slate max-w-none">
          <div class="mb-8 text-center md:text-left">
            <div class="text-slate-500 text-sm font-mono mb-2">
              Publié le {
                pubDate.toLocaleDateString('fr-FR', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })
              }
            </div>
            <h1 class="text-3xl md:text-5xl font-extrabold text-slate-900 mb-4">{title}</h1>
            <hr class="border-rust w-20 border-t-4 rounded md:mx-0 mx-auto" />
          </div>

          <slot />
        </div>
      </article>
    </main>

    <Footer />
  </body>
</html>
