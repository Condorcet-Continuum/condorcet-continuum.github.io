                    <div class="flex flex-wrap gap-4 md:gap-8 mb-6 border-b border-slate-100 pb-6">
                      {phase.kpis.map((kpi) => (
                        <div class="flex flex-col">
                          <span
                            class={`font-bold text-lg font-mono ${phase.status === 'En cours' ? 'text-green-600' : 'text-slate-700'}`}
                          >
                            {kpi.value}
                          </span>
                          <span class="text-[9px] uppercase tracking-wide text-slate-400 font-bold">
                            {kpi.label}
                          </span>
                        </div>
                      ))}
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                      <div class="bg-slate-50 rounded-lg p-3 border-l-2 border-rust">
                        <span class="text-[10px] font-bold text-rust uppercase block mb-1">
                          ü§ñ T√¢che Agent
