          </div>
        </div>
      </section>

      <section class="max-w-5xl mx-auto mb-24">
        <div class="flex items-center gap-4 mb-6 opacity-80">
          <div class="w-3 h-3 bg-slate-400 rounded-full"></div>
          <h3 class="font-bold text-slate-500 uppercase text-xs tracking-widest">
            Start : Prototype v0.1.0-alpha
          </h3>
        </div>

        <div class="bg-white rounded-3xl shadow-xl border border-slate-200 overflow-hidden">
          <div
            class="hidden md:grid grid-cols-12 bg-slate-50 border-b border-slate-200 p-4 text-xs font-bold text-slate-400 uppercase tracking-widest"
          >
            <div class="col-span-3 pl-4">Calendrier</div>
            <div class="col-span-9 pl-4">Programme Technique</div>
          </div>

          <div class="divide-y divide-slate-100">
            {
              phases.map((phase) => (
                <div
                  class={`grid grid-cols-1 md:grid-cols-12 group transition-colors hover:bg-slate-50/50
