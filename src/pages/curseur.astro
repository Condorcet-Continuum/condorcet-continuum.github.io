---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'D√©finition du Mandat | R.A.I.S.E.';
const description =
  'Interface de programmation sans code. Traduisez vos intentions strat√©giques en r√®gles formelles.';
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body
    class="bg-slate-950 text-slate-200 font-sans antialiased selection:bg-rust selection:text-white"
  >
    <Header />

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="mb-12 border-b border-slate-800 pb-8">
        <div class="flex items-center gap-3 mb-4">
          <a href="/cognition" class="text-xs text-slate-500 hover:text-rust transition-colors"
            >‚Üê Retour √† l'Architecture</a
          >
          <span class="text-slate-600">/</span>
          <span class="text-xs text-rust font-bold uppercase tracking-widest"
            >Workspace L√©gislateur</span
          >
        </div>

        <h1 class="text-3xl md:text-5xl font-extrabold mb-6">
          <span class="text-transparent bg-clip-text bg-linear-to-r from-blue-600 to-rust">
            Ratification du Mandat
          </span>
        </h1>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto mb-12">
          Voici le c≈ìur de la "Bo√Æte de Verre". Vos r√©glages visuels sont traduits instantan√©ment en
          un contrat JSON strict que l'IA ne pourra pas contourner.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
        <div
          class="bg-slate-900 rounded-2xl border border-slate-800 p-8 shadow-2xl relative h-full"
        >
          <div
            class="absolute -top-3 -left-3 bg-blue-600 text-white px-3 py-1 rounded text-xs font-bold uppercase shadow-lg"
          >
            Input Humain
          </div>

          <form id="mandateForm" class="space-y-10">
            <div>
              <h3
                class="text-white font-bold text-sm uppercase tracking-widest mb-6 border-l-2 border-blue-500 pl-3"
              >
                1. Orientation Strat√©gique
              </h3>
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
                <label class="cursor-pointer">
                  <input type="radio" name="strategy" value="production" class="peer sr-only" />
                  <div
                    class="bg-slate-800 p-4 rounded-lg border border-slate-700 text-center peer-checked:border-blue-500 peer-checked:bg-blue-500/10 hover:bg-slate-700 transition-all"
                  >
                    <div class="text-2xl mb-2">‚ö°</div>
                    <div class="text-xs font-bold text-slate-300">Productivit√©</div>
                  </div>
                </label>
                <label class="cursor-pointer">
                  <input type="radio" name="strategy" value="safety" checked class="peer sr-only" />
                  <div
                    class="bg-slate-800 p-4 rounded-lg border border-slate-700 text-center peer-checked:border-rust peer-checked:bg-rust/10 hover:bg-slate-700 transition-all shadow-lg shadow-rust/5"
                  >
                    <div class="text-2xl mb-2">üõ°Ô∏è</div>
                    <div class="text-xs font-bold text-white">S√©curit√© Totale</div>
                  </div>
                </label>
                <label class="cursor-pointer">
                  <input type="radio" name="strategy" value="cost" class="peer sr-only" />
                  <div
                    class="bg-slate-800 p-4 rounded-lg border border-slate-700 text-center peer-checked:border-green-500 peer-checked:bg-green-500/10 hover:bg-slate-700 transition-all"
                  >
                    <div class="text-2xl mb-2">üí∞</div>
                    <div class="text-xs font-bold text-slate-300">√âconomie</div>
                  </div>
                </label>
              </div>
            </div>

            <div>
              <h3
                class="text-white font-bold text-sm uppercase tracking-widest mb-6 border-l-2 border-rust pl-3"
              >
                2. Poids des Agents (Vote)
              </h3>

              <div class="space-y-8">
                <div>
                  <div class="flex justify-between mb-2">
                    <label class="text-sm font-bold text-rust flex items-center gap-2">
                      üëÆ Agent S√©curit√©
                    </label>
                    <span
                      class="text-xs font-mono bg-rust text-white px-2 py-0.5 rounded"
                      id="val-security">3.0x</span
                    >
                  </div>
                  <input
                    type="range"
                    id="input-security"
                    min="0.5"
                    max="5.0"
                    step="0.5"
                    value="3.0"
                    class="w-full h-2 bg-slate-700 rounded-lg appearance-none cursor-pointer accent-rust"
                  />
                </div>

                <div>
                  <div class="flex justify-between mb-2">
                    <label class="text-sm font-bold text-green-500 flex items-center gap-2">
                      üí∞ Agent Finance
                    </label>
                    <span
                      class="text-xs font-mono bg-green-900 text-green-300 px-2 py-0.5 rounded"
                      id="val-finance">1.0x</span
                    >
                  </div>
                  <input
                    type="range"
                    id="input-finance"
                    min="0.5"
                    max="5.0"
                    step="0.5"
                    value="1.0"
                    class="w-full h-2 bg-slate-700 rounded-lg appearance-none cursor-pointer accent-green-500"
                  />
                </div>
              </div>
            </div>

            <div>
              <h3
                class="text-white font-bold text-sm uppercase tracking-widest mb-6 border-l-2 border-purple-500 pl-3"
              >
                3. Lignes Rouges (Logic)
              </h3>
              <div class="space-y-4">
                <label
                  class="flex items-start gap-4 p-3 bg-slate-800/50 rounded-lg border border-slate-700 cursor-pointer hover:border-slate-500 transition-colors"
                >
                  <div class="relative flex items-center mt-1">
                    <input type="checkbox" id="veto-vibration" checked class="peer sr-only" />
                    <div
                      class="w-10 h-6 bg-slate-600 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"
                    >
                    </div>
                  </div>
                  <div>
                    <span class="text-sm font-bold text-white block">Arr√™t si Vibration > Max</span>
                    <span class="text-xs text-slate-400"
                      >Force l'arr√™t machine m√™me si perte financi√®re √©lev√©e.</span
                    >
                  </div>
                </label>
              </div>
            </div>

            <div>
              <h3
                class="text-white font-bold text-sm uppercase tracking-widest mb-6 border-l-2 border-cyan-500 pl-3"
              >
                4. Observabilit√© (KPIs)
              </h3>

              <div class="space-y-6">
                <div>
                  <div class="flex justify-between mb-2">
                    <label class="text-sm font-bold text-cyan-400 flex items-center gap-2">
                      üì° Fr√©quence Reporting
                    </label>
                    <span
                      class="text-xs font-mono bg-cyan-950 text-cyan-300 px-2 py-0.5 rounded border border-cyan-900"
                      id="val-reporting">50ms</span
                    >
                  </div>
                  <input
                    type="range"
                    id="input-reporting"
                    min="10"
                    max="1000"
                    step="10"
                    value="50"
                    class="w-full h-2 bg-slate-700 rounded-lg appearance-none cursor-pointer accent-cyan-400"
                  />
                  <div class="flex justify-between text-[10px] text-slate-500 mt-1 font-mono">
                    <span>Real-time</span>
                    <span>Diff√©r√©</span>
                  </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                  <label
                    class="flex items-center gap-3 p-3 bg-slate-800/30 rounded border border-slate-700/50 cursor-pointer hover:border-cyan-500/50 transition-all"
                  >
                    <input
                      type="checkbox"
                      id="kpi-latency"
                      checked
                      class="accent-cyan-500 w-4 h-4 rounded border-slate-600 bg-slate-700"
                    />
                    <span class="text-xs text-slate-300 font-bold">Trace Latence</span>
                  </label>
                  <label
                    class="flex items-center gap-3 p-3 bg-slate-800/30 rounded border border-slate-700/50 cursor-pointer hover:border-cyan-500/50 transition-all"
                  >
                    <input
                      type="checkbox"
                      id="kpi-carbon"
                      class="accent-cyan-500 w-4 h-4 rounded border-slate-600 bg-slate-700"
                    />
                    <span class="text-xs text-slate-300 font-bold">Empreinte CO2</span>
                  </label>
                </div>
              </div>
            </div>
          </form>
        </div>

        <div class="mt-12 lg:mt-0 sticky top-8">
          <div class="relative">
            <div
              class="absolute -top-3 -left-3 bg-rust text-white px-3 py-1 rounded text-xs font-bold uppercase shadow-lg z-10"
            >
              Input Agent
            </div>

            <div
              class="bg-black rounded-2xl border border-slate-800 shadow-2xl overflow-hidden flex flex-col"
            >
              <div
                class="bg-slate-900 px-4 py-3 border-b border-slate-800 flex justify-between items-center shrink-0"
              >
                <div class="flex gap-2">
                  <div class="w-3 h-3 rounded-full bg-red-500/20 border border-red-500/50"></div>
                  <div class="w-3 h-3 rounded-full bg-yellow-500/20 border border-yellow-500/50">
                  </div>
                  <div class="w-3 h-3 rounded-full bg-green-500/20 border border-green-500/50">
                  </div>
                </div>

                <div class="flex bg-slate-800 rounded-lg p-1 text-[10px] font-bold font-mono">
                  <button
                    id="tab-data"
                    class="px-3 py-1.5 rounded bg-slate-600 text-white shadow transition-all"
                  >
                    DATA (Valeurs)
                  </button>
                  <button
                    id="tab-schema"
                    class="px-3 py-1.5 rounded text-slate-400 hover:text-white transition-all"
                  >
                    SCHEMA (Structure)
                  </button>
                </div>
              </div>

              <div class="relative h-[850px] overflow-auto custom-scrollbar bg-slate-950 p-6">
                <pre
                  id="view-data"
                  class="font-mono text-xs leading-relaxed text-blue-300 transition-opacity duration-300">
&#123;
  <span class="text-slate-500">"meta"</span>: &#123;
    <span class="text-purple-400">"status"</span>: "DRAFT",
    <span class="text-purple-400">"author"</span>: "Directeur_Ops"
  &#125;,
  <span class="text-slate-500">"governance"</span>: &#123;
    <span class="text-purple-400">"strategy"</span>: <span class="text-green-400">"SAFETY_CRITICAL"</span>,
    <span class="text-purple-400">"condorcet_weights"</span>: &#123;
      <span class="text-white">"agent_security"</span>: <span class="text-orange-400 font-bold" id="code-security">3.0</span>,
      <span class="text-white">"agent_finance"</span>: <span class="text-orange-400 font-bold" id="code-finance">1.0</span>
    &#125;
  &#125;,
  <span class="text-slate-500">"hard_logic"</span>: &#123;
    <span class="text-purple-400">"vetos"</span>: [
      &#123;
        <span class="text-white">"rule"</span>: "VIBRATION_MAX",
        <span class="text-white">"active"</span>: <span class="text-orange-400 font-bold" id="code-veto">true</span>,
        <span class="text-white">"action"</span>: "EMERGENCY_SHUTDOWN"
      &#125;
    ]
  &#125;,
  <span class="text-slate-500">"observability"</span>: &#123;
    <span class="text-purple-400">"heartbeat_ms"</span>: <span class="text-cyan-400 font-bold" id="code-reporting">50</span>,
    <span class="text-purple-400">"metrics"</span>: [
      <span class="text-green-400" id="code-metric-lat">"LATENCY_TRACE"</span><span id="comma-metric" class="text-slate-500 hidden">,</span>
      <span class="text-green-400 hidden" id="code-metric-co2">"CARBON_FOOTPRINT"</span>
    ]
  &#125;
&#125;</pre>

                <pre
                  id="view-schema"
                  class="hidden font-mono text-xs leading-relaxed text-yellow-100/70">
&#123;
  <span class="text-slate-500">"$schema"</span>: "http://json-schema.org/draft-07/schema#",
  <span class="text-purple-400">"type"</span>: "object",
  <span class="text-purple-400">"properties"</span>: &#123;
    <span class="text-slate-500">"meta"</span>: &#123;
      <span class="text-purple-400">"type"</span>: "object", 
      <span class="text-purple-400">"required"</span>: ["author", "signature"] 
    &#125;,
    <span class="text-slate-500">"observability"</span>: &#123;
      <span class="text-purple-400">"type"</span>: "object",
      <span class="text-purple-400">"required"</span>: ["heartbeat_ms"],
      <span class="text-purple-400">"properties"</span>: &#123;
        <span class="text-slate-500">"heartbeat_ms"</span>: &#123; <span class="text-purple-400">"type"</span>: "integer", <span class="text-purple-400">"maximum"</span>: 1000 &#125;
      &#125;
    &#125;
  &#125;
&#125;
<span class="block mt-4 text-slate-500 italic">// Le Kernel garantit que la boucle de contr√¥le
// ne d√©passe jamais le heartbeat d√©fini ici.</span>
</pre>
              </div>

              <div class="bg-slate-900 px-4 py-4 border-t border-slate-800 text-center shrink-0">
                <button
                  class="bg-rust hover:bg-orange-600 text-white font-bold py-3 px-8 rounded-lg shadow-lg shadow-rust/20 w-full transition-all flex justify-center items-center gap-2 group"
                >
                  <span class="text-xl">‚úçÔ∏è</span>
                  <span>Signer cryptographiquement</span>
                </button>
                <p class="text-[10px] text-slate-400 mt-2 font-mono">
                  Hash SHA-256 g√©n√©r√© sur la base du Sch√©ma v1.0
                </p>
              </div>
            </div>
          </div>

          <div
            id="note-data"
            class="mt-6 p-4 border border-blue-500/40 bg-blue-950/60 rounded-xl flex gap-4 items-start transition-all shadow-lg"
          >
            <div class="text-2xl">üí°</div>
            <p class="text-sm text-blue-50">
              <strong class="text-white block mb-1">Preuve par le Code :</strong> Ce JSON est le r√©sultat
              direct de vos choix. C'est un ordre formel, pas une suggestion.
            </p>
          </div>

          <div
            id="note-schema"
            class="hidden mt-6 p-4 border border-yellow-500/40 bg-yellow-950/60 rounded-xl gap-4 items-start transition-all shadow-lg"
          >
            <div class="text-2xl">üõ°Ô∏è</div>
            <p class="text-sm text-yellow-50">
              <strong class="text-white block mb-1">Validation Stricte :</strong> Le Sch√©ma d√©finit la
              "Loi du Code". Si un hacker tente d'injecter une string l√† o√π un nombre est attendu, le
              syst√®me rejette le mandat avant m√™me l'ex√©cution.
            </p>
          </div>
        </div>
      </div>
    </main>

    <Footer />

    <script>
      // --- 1. GESTION DE LA R√âACTIVIT√â (DATA) ---
      const rangeSecurity = document.getElementById('input-security') as HTMLInputElement;
      const rangeFinance = document.getElementById('input-finance') as HTMLInputElement;
      const checkVeto = document.getElementById('veto-vibration') as HTMLInputElement;

      // NOUVEAUX INPUTS
      const rangeReporting = document.getElementById('input-reporting') as HTMLInputElement;
      const checkKpiLat = document.getElementById('kpi-latency') as HTMLInputElement;
      const checkKpiCarb = document.getElementById('kpi-carbon') as HTMLInputElement;

      const displaySecurity = document.getElementById('val-security');
      const displayFinance = document.getElementById('val-finance');
      const displayReporting = document.getElementById('val-reporting');

      const codeSecurity = document.getElementById('code-security');
      const codeFinance = document.getElementById('code-finance');
      const codeVeto = document.getElementById('code-veto');

      // NOUVEAUX CODES DISPLAY
      const codeReporting = document.getElementById('code-reporting');
      const codeMetricLat = document.getElementById('code-metric-lat');
      const codeMetricCo2 = document.getElementById('code-metric-co2');
      const commaMetric = document.getElementById('comma-metric');

      function updateJSON() {
        if (!rangeSecurity || !rangeFinance || !displaySecurity || !displayFinance) return;

        // Update UI Values
        displaySecurity.textContent = rangeSecurity.value + 'x';
        displayFinance.textContent = rangeFinance.value + 'x';
        if (displayReporting && rangeReporting)
          displayReporting.textContent = rangeReporting.value + 'ms';

        // Update JSON Code
        if (codeSecurity) codeSecurity.textContent = parseFloat(rangeSecurity.value).toFixed(1);
        if (codeFinance) codeFinance.textContent = parseFloat(rangeFinance.value).toFixed(1);
        if (codeVeto) codeVeto.textContent = checkVeto.checked ? 'true' : 'false';

        // Update Observability
        if (codeReporting && rangeReporting) codeReporting.textContent = rangeReporting.value;

        if (codeMetricLat && checkKpiLat) {
          checkKpiLat.checked
            ? codeMetricLat.classList.remove('hidden')
            : codeMetricLat.classList.add('hidden');
        }
        if (codeMetricCo2 && checkKpiCarb) {
          checkKpiCarb.checked
            ? codeMetricCo2.classList.remove('hidden')
            : codeMetricCo2.classList.add('hidden');
        }

        // Gestion de la virgule entre les deux metrics du tableau JSON
        if (commaMetric && checkKpiLat && checkKpiCarb) {
          checkKpiLat.checked && checkKpiCarb.checked
            ? commaMetric.classList.remove('hidden')
            : commaMetric.classList.add('hidden');
        }

        // Flash Effect
        const block = document.getElementById('view-data');
        if (block && !block.classList.contains('hidden')) {
          block.classList.add('opacity-50');
          setTimeout(() => block.classList.remove('opacity-50'), 100);
        }
      }

      // Listeners
      if (rangeSecurity) rangeSecurity.addEventListener('input', updateJSON);
      if (rangeFinance) rangeFinance.addEventListener('input', updateJSON);
      if (checkVeto) checkVeto.addEventListener('change', updateJSON);

      // Nouveaux Listeners
      if (rangeReporting) rangeReporting.addEventListener('input', updateJSON);
      if (checkKpiLat) checkKpiLat.addEventListener('change', updateJSON);
      if (checkKpiCarb) checkKpiCarb.addEventListener('change', updateJSON);

      // --- 2. GESTION DES ONGLETS (TABS) ---
      const tabData = document.getElementById('tab-data');
      const tabSchema = document.getElementById('tab-schema');
      const viewData = document.getElementById('view-data');
      const viewSchema = document.getElementById('view-schema');
      const noteData = document.getElementById('note-data');
      const noteSchema = document.getElementById('note-schema');

      function switchTab(mode: string) {
        if (!tabData || !tabSchema || !viewData || !viewSchema || !noteData || !noteSchema) return;

        if (mode === 'data') {
          // UI Buttons
          tabData.classList.replace('text-slate-400', 'text-white');
          tabData.classList.replace('hover:text-white', 'bg-slate-600');
          tabData.classList.add('bg-slate-600', 'shadow');

          tabSchema.classList.remove('bg-slate-600', 'text-white', 'shadow');
          tabSchema.classList.add('text-slate-400', 'hover:text-white');

          // Views
          viewData.classList.remove('hidden');
          viewSchema.classList.add('hidden');

          // Notes (Toggle Flex/Hidden)
          noteData.classList.remove('hidden');
          noteData.classList.add('flex');

          noteSchema.classList.add('hidden');
          noteSchema.classList.remove('flex');
        } else {
          // UI Buttons
          tabSchema.classList.replace('text-slate-400', 'text-white');
          tabSchema.classList.replace('hover:text-white', 'bg-slate-600');
          tabSchema.classList.add('bg-slate-600', 'shadow');

          tabData.classList.remove('bg-slate-600', 'text-white', 'shadow');
          tabData.classList.add('text-slate-400', 'hover:text-white');

          // Views
          viewSchema.classList.remove('hidden');
          viewData.classList.add('hidden');

          // Notes (Toggle Flex/Hidden)
          noteSchema.classList.remove('hidden');
          noteSchema.classList.add('flex');

          noteData.classList.add('hidden');
          noteData.classList.remove('flex');
        }
      }

      if (tabData) tabData.addEventListener('click', () => switchTab('data'));
      if (tabSchema) tabSchema.addEventListener('click', () => switchTab('schema'));
    </script>
  </body>
</html>
