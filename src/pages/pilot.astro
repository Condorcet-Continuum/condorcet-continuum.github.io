          </div>
        </div>
      </div>
    </main>
    <Footer />

    <script define:vars={{ GOOGLE_SCRIPT_URL }}>
      const form = document.getElementById('pilot-form');
      const submitBtn = document.getElementById('submit-btn');
      const successMsg = document.getElementById('success-message');
      const errorMsg = document.getElementById('error-msg');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        submitBtn.disabled = true;
        submitBtn.querySelector('span').textContent = 'Envoi en cours...';
        errorMsg.classList.add('hidden');

        try {
          // 1. On capture les donn√©es du formulaire
          const formData = new FormData(form);

          // 2. Gestion manuelle de la checkbox NDA
          // (car une checkbox non coch√©e n'envoie rien)
          formData.append('nda', form.querySelector('#nda').checked ? 'OUI' : 'NON');

          // 3. Envoi simple via Fetch (Pas de JSON, on envoie le FormData direct)
          await fetch(GOOGLE_SCRIPT_URL, {
            method: 'POST',
            body: formData,
          });

          // 4. Succ√®s
          form.classList.add('opacity-0');
          setTimeout(() => {
            successMsg.classList.remove('hidden');
            successMsg.classList.add('flex');
          }, 300);
        } catch (err) {
          console.error('Erreur:', err);
          submitBtn.disabled = false;
          submitBtn.querySelector('span').textContent = 'Soumettre ma candidature';
          errorMsg.classList.remove('hidden');
        }
      });
    </script>
  </body>
</html>
