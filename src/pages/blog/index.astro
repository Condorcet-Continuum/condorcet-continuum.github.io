---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';

// R√©cup√©ration des articles tri√©s par date (le plus r√©cent en premier)
const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
  <head>
    <BaseHead title={`Le Journal | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-slate-50 text-slate-900 font-sans antialiased">
    <Header />

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
      <div class="text-center mb-16">
        <div
          class="inline-flex items-center gap-2 px-3 py-1 rounded border border-slate-200 bg-white text-slate-500 text-[10px] font-mono uppercase tracking-widest mb-6 shadow-sm"
        >
          <span>‚óè</span> Ressources & Actualit√©s
        </div>
        <h1 class="text-4xl md:text-5xl font-extrabold text-slate-900 mb-6">
          Le <span class="text-rust">Journal</span>
        </h1>
        <p class="text-xl text-slate-600 max-w-2xl mx-auto">
          Analyses techniques, mises √† jour du protocole et r√©flexions sur la souverainet√©
          num√©rique.
        </p>
      </div>

      <section>
        <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            posts.map((post) => (
              <li class="group">
                <a href={`/blog/${post.id}/`} class="block h-full">
                  <article class="bg-white rounded-2xl overflow-hidden border border-slate-200 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 h-full flex flex-col">
                    {/* Image de l'article */}
                    <div class="aspect-video w-full overflow-hidden bg-slate-100 border-b border-slate-100">
                      {post.data.heroImage ? (
                        <Image
                          src={post.data.heroImage}
                          width={720}
                          height={360}
                          alt=""
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                        />
                      ) : (
                        /* Placeholder si pas d'image */
                        <div class="w-full h-full flex items-center justify-center text-slate-300">
                          <span class="text-4xl">üìÑ</span>
                        </div>
                      )}
                    </div>

                    {/* Contenu textuel */}
                    <div class="p-6 flex flex-col flex-1">
                      <div class="text-xs font-mono text-slate-500 mb-3 flex items-center gap-2">
                        <span class="text-rust">‚óè</span>
                        <FormattedDate date={post.data.pubDate} />
                      </div>
                      <h2 class="text-xl font-bold text-slate-900 mb-3 group-hover:text-rust transition-colors leading-tight">
                        {post.data.title}
                      </h2>
                      <p class="text-slate-600 text-sm line-clamp-3 mb-4 flex-1">
                        {post.data.description}
                      </p>
                      <div class="text-rust text-sm font-bold mt-auto flex items-center gap-1">
                        Lire l'article <span>‚Üí</span>
                      </div>
                    </div>
                  </article>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>

    <Footer />
  </body>
</html>
